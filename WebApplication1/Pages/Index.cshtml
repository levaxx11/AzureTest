@page
@model IndexModel
@{
    ViewData["Title"] = "Cars";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the Car Info Site!</h1>
    <p>Here you'll find information about popular car brands.</p>



    <hr />

    <h2>Popular Car Brands:</h2>

    <div class="car-list">
        <div class="car-item">
            <h3>🚗 Toyota</h3>
