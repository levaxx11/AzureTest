<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - MyWebApp</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="/css/site.css" rel="stylesheet">
</head>
<body class="bg-gray-100 font-sans">
    <nav class="bg-blue-600 text-white py-4">
        <div class="container mx-auto flex justify-between">
            <a class="text-xl font-bold" href="/">MyWebApp</a>
            <div>
                <a class="px-4 hover:underline" href="/">Home</a>
                <a class="px-4 hover:underline" href="/Messages">Messages</a>
            </div>
        </div>
    </nav>
    @RenderBody()
    <footer class="bg-gray-800 text-white py-6">
        <div class="container mx-auto text-center">
            <p>© @DateTime.Now.Year MyWebApp. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>